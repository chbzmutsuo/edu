{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@cm/*": ["src/cm/*"],
      "@shadcn/*": ["src/cm/shadcn/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "next.config.ts",
    "src/app/(apps)/portal/portal-mock.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.dump",
    "public/**/*",
    "scripts/**/*",
    ".next/cache/**/*",
    ".next/server/**/*",
    ".next/static/**/*"
  ]
}
